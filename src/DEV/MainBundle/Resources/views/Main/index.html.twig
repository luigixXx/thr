{% extends "DEVMainBundle::layout.html.twig" %}

{% block title%}{{ parent() }} Accueil{% endblock%}

{%block body%}
<div class="col-md-8" style="color: black">
	<div class="well">
		<legend>
			Dernières Actualités
		</legend>
		<table class="table">
			{%for actu in actus %}
			<tr class="click">
				<td>{{actu.titre}}</td>
				<td>{{actu.datemod|date('d-m-Y')}}</td>
			</tr>
			{%endfor%}
		</table>
	</div>
</div>
<div class="col-md-4">
	<div id="carousel_fade" class="carousel slide carousel-fade">
		<div class="carousel-inner shad">
			<div class="item">
