{% extends "SonataUserBundle::layout.html.twig" %}
{% block title%}{{ parent() }} Connexion{% endblock%}
{% block fos_user_content %}
<div class="row-fluid">
	<div class="col-md-offset-4 col-md-4 well text-center shad">
		{% if error %}
		<div>
			{{ error|trans({}, 'FOSUserBundle') }}
		</div>
		{% endif %}
		<legend>
			Connexion :
		</legend>
		<form action="{{ path("fos_user_security_check") }}" method="post">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

			<div class="control-group">
				<label for="username" class="control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
				<div class="controls">
					<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
				</div>
			</div>

			<div class="control-group">
				<label for="password" class="control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
				<div class="controls">
					<input type="password" id="password" name="_password" required="required" />
				</div>
			</div>

			<div class="control-group">
				<label for="remember_me">
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
					{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }} </label>
			</div>

			<input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
		</form>
	</div>
</div>
<div class="row-fluid">
	<div class="offset4 span4">
		<img src="{{asset('img/frise.png')}}" />
	</div>
</div>
{% endblock fos_user_content %}

